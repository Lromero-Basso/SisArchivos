<!-- /TABLE WITH SORT -->

<form method="POST" id="bulk_form" action="{{ path('carpecaja_bulk_action') }} ">
  <div class="card mb-4 mt-4">
    <table class="table table-striped table-hover table-sm" id="tabla" namefile="Carpecaja">
      <thead>
        <tr>
          {% import "@PetkoparaCrudGenerator/macros/th_sortable.html.twig" as macros %}
          <th style="border:0px;">{{macros.th_sortable('id',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'viewFolders','Código carpeta')}}</th>
          <th style="border:0px;">{{macros.th_sortable('nroCarpeta',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'viewFolders','N° Carpeta')}}</th>
          <th style="border:0px;">{{macros.th_sortable('codCaja',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'viewFolders','Código Caja')}}</th>
          <th style="border:0px;">{{macros.th_sortable('tituloCarp',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'viewFolders','Título Carpeta')}}</th>
          <th style="border:0px;">{{macros.th_sortable('fechaDesdeCarp',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'viewFolders','Fecha Desde')}}</th>
          <th style="border:0px;">{{macros.th_sortable('fechaHastaCarp',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'viewFolders','Fecha Hasta')}}</th>
          <th style="border:0px;">{{macros.th_sortable('nEstado',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'viewFolders','Estado')}}</th>
          <th style="border:0px;" width = "130px" class="noExl">Acciones</th>
        </tr>
      </thead>
      <tbody> 
        {% for folder in folders %}
        <tr>
          <td>{{folder.id}}</td>
          <td>{{folder.nroCarpeta}}</td>
          <td>{{folder.codCaja}}</td>
          <td>{{folder.tituloCarp}}</td>
          <td>{{folder.fechaDesdeCarp|date('d-m-Y')}}</td>
          <td>{{folder.fechaHastaCarp|date('d-m-Y')}}</td>
          <td>{% if folder.nEstado == 0 %}En Archivo{% else %}Retirada{% endif %}</td>
          <td class="actions  noExl">
            <div class="btn-group">
              <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Opciones <span class="caret"></span>
              </button>
              <div class="dropdown-menu">
                <a class="dropdown-item" title='Vista Previa' href="{{ path('showFolder', { 'id': folder.id }) }} ">Vista Previa</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" title='Editar'  href="{{ path('editFolder', { 'id': folder.id }) }}">Editar</a>
                {# <a class="dropdown-item" onclick="return confirm('Seguro desea Eliminar!');" title="Delete" href="{{ path('deleteFolder', { 'id': folder.id}) }}">Eliminar</a> #}
              </div>
            </div>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</form>
<!-- END TABLE -->

<div class="row">
  <div class="col-md-4 pull-left">
    <!-- EXPORT DATE -->
    <div class="dropdown dropup">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown"><i class="fa fa-bars"></i> Exportar Datos
        <span class="caret"></span></button>
        <div class="dropdown-menu">
            <a class="dropdown-item" onclick="exportToExcel()" href="#"><img src="{{ asset('images/icons/xls.png') }}" width="24"> Excel</a>
        </div>
    </div>
    <!-- END EXPORT DATE -->
  </div>
    
  <div class='col-md-3 text-center'>
        <p>{{totalOfRecordsString}}</p>
  </div>

  <div class="col-md-5">
    <div class="float-right">
      {{ pagerHtml|raw }} 
    </div>
  </div>
</div>

{% endblock %}
