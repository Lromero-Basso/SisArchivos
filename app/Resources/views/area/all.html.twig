{% extends "base.html.twig" %}

{% block title %} {{ parent() }} - Registros {% endblock %}

{% block body %}

<!-- HEADER -->
<div class="row"> 

<!-- FILTERING -->
  <div class="col-md-12"> 
    <div  id="filters" class="collapse"> 
      <form class="card pl-3 pr-3 pt-2 bg-light mb-3" action="{{ path('viewAreas') }}" method="get">
        <div class="row">
          <div class="col-md-1">{{ form_row(filterForm.id) }}</div>
          <div class="col-md-2">{{ form_row(filterForm.nomArea) }}</div>

          <div class="col-md-6">
            {{ form_rest(filterForm) }}
          </div>

          <div class="col-md-12">
              <div class="form-group">
                  <button type="submit" class="btn btn-warning" name="filter_action" value="filter"><i class="fas fa-filter"></i> Filtrar</button>
                  <button type="submit" class="btn btn-secondary" name="filter_action" value="reset"><i class="fas fa-minus"></i> Reset</button>
              </div>
          </div>
        </div>

      </form>
    </div>
  </div>
  <!-- END FILTERING -->

  <!-- PAGE SIZE -->
  <div class="col-md-3 pull-left">
    <div class="pagination form-inline ">
      <select class = "form-control"  onchange="window.location = this.value" >
          <option value='{{ path('viewAreas', app.request.query.all|merge({'pcg_show': '10'})) }}' {% if app.request.get('pcg_show')  == 10 %}  selected {% endif %}>10</option>
          <option value='{{ path('viewAreas', app.request.query.all|merge({'pcg_show': '20'})) }}' {% if app.request.get('pcg_show')  == 20 %}  selected {% endif %}>20</option>
          <option value='{{ path('viewAreas', app.request.query.all|merge({'pcg_show': '50'})) }}' {% if app.request.get('pcg_show')  == 50 %}  selected {% endif %}>50</option>
          <option value='{{ path('viewAreas', app.request.query.all|merge({'pcg_show': '100'})) }}' {% if app.request.get('pcg_show') == 100 %} selected {% endif %}>100</option>
          <option value='{{ path('viewAreas', app.request.query.all|merge({'pcg_show': '500'})) }}' {% if app.request.get('pcg_show') == 500 %} selected {% endif %}>500</option>
      </select>
    </div>
      
  </div>

  <!-- END PAGE SIZE -->

  <div class="col-md-6"></div>

  <!-- FILTER BUTTON -->
  <div class="col-md-3">
    <div class="float-right">
      <a class="btn dropdown-toggle pull-right h3" data-toggle="collapse" data-target="#filters">Filtro<span class="caret"></span></a>	
      <a class="btn btn-primary h3 pull-right" href="{{ path('createArea') }}" style="margin-bottom:10px"><i class="fas fa-plus"></i> Nuevo</a>
    </div>	
  </div>
  <!-- END FILTER BUTTON -->

  <!-- FORM ERRORS -->
  <div class="col-md-12">
        {%- if form_errors(filterForm) %}
        <div class="alert alert-block alert-error fade in form-errors">
            {{ form_errors(filterForm) }}
        </div>
        {% endif %}
  </div>
  <!-- FORM ERRORS -->

<!-- END HEADER -->
</div>

<!-- /TABLE WITH SORT -->

<form method="POST" id="bulk_form" action="{{ path('area_bulk_action') }} ">
  <div class="card mb-4 mt-4">
    <table class="table table-striped table-hover table-sm" id="tabla" namefile="Areas">
      <thead>
        <tr>
          {% import "@PetkoparaCrudGenerator/macros/th_sortable.html.twig" as macros %}
          <th style="border:0px;">{{macros.th_sortable('id',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'viewAreas','Id')}}</th>
          <th style="border:0px;">{{macros.th_sortable('nomArea',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'viewAreas','Nombre Ã¡rea')}}</th>
          <th style="border:0px;" width = "130px" class="noExl">Acciones</th>
        </tr>
      </thead>
      <tbody> 
        {% for area in areas %}
        <tr>
          <td>{{area.id}}</td>
          <td>{{area.nomArea}}</td>
          <td class="actions  noExl">
            <div class="btn-group">
              <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Opciones <span class="caret"></span>
              </button>
              <div class="dropdown-menu">
                <a class="dropdown-item" title='Vista Previa' href="{{ path('showArea', { 'id': area.id }) }}">Vista Previa</a>
                <a class="dropdown-item" title='Editar'  href="{{ path('editArea', { 'id': area.id }) }}">Editar</a>
                <a class="dropdown-item" onclick="return confirm('Seguro desea Eliminar!');" title="Delete" href="{{ path('deleteArea', { 'id': area.id}) }}">Eliminar</a>
              </div>
            </div>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</form>
<!-- END TABLE -->

<div class="row">
  <div class="col-md-4 pull-left">
    <!-- EXPORT DATE -->
    <div class="dropdown dropup">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown"><i class="fa fa-bars"></i> Exportar Datos
        <span class="caret"></span></button>
        <div class="dropdown-menu">
            <a class="dropdown-item" onclick="exportToExcel()" href="#"><img src="{{ asset('images/icons/xls.png') }}" width="24"> Excel</a>
        </div>
    </div>
    <!-- END EXPORT DATE -->
  </div>
    
  <div class='col-md-3 text-center'>
        <p>{{totalOfRecordsString}}</p>
  </div>

  <div class="col-md-5">
    <div class="float-right">
      {{ pagerHtml|raw }} 
    </div>
  </div>
</div>

{% endblock %}

{% block javascript %}
	{{ parent()}}
    <script type="text/javascript" src=" {{ asset('js/jquery.table2excel.js') }}"></script>
{% endblock %} 