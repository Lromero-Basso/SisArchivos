{% extends "base.html.twig" %}

{% block body %}
<div class="card mb-3">
    <div class="card-header">
        <i class="far fa-file"></i>&nbsp;&nbsp;<b>Ingreso de datos</b>
    </div>
    <form method="post">
    <div class="card-body" style="padding-bottom:0px;padding-top:16px;">
        {% if area is defined %}
        <div class="row">
            <div class="col-md-2">
                <label>Código área<span class="ml-1 text-danger">*</span></label>
                <input class="form-control" type="text" name="Area[codArea]" value="{{area.id}}" required>
            </div>
            <div class="col-md-4">
                <label>Nombre área<span class="ml-1 text-danger">*</span></label>
                <input class="form-control text-uppercase" type="text" name="Area[nomArea]" value="{{area.nomArea}}" required>
            </div>
        </div>
        <div class="float-right mb-3">
            <button  class="btn btn-info" style="margin-top:30px;" type="submit"> 
                <i class="far fa-check-circle"></i> {% if folder is defined %} Guardar cambios {% else %} Editar área {% endif %}
            </button>
            <a class="btn btn-secondary text-white" onclick="return confirm('¿Está seguro que desea cancelar la edición?')" style="margin-top:30px;" href="{{path('viewAreas')}}"> 
                <i class="fas fa-undo-alt"></i> Volver
            </a>
        </div>
        {% else %}
        <div class="row">
            <div class="col-md-2">
                <label>Código área<span class="ml-1 text-danger">*</span></label>
                <input class="form-control" type="text" name="Area[codArea]" value="{{countArea}}" readonly>
            </div>
            <div class="col-md-4">
                <label>Nombre área<span class="ml-1 text-danger">*</span></label>
                <input class="form-control text-uppercase" type="text" name="Area[nomArea]" value="" required>
            </div>
        </div>
        <div class="float-right mb-3">
            <button  class="btn btn-info" style="margin-top:30px;" type="submit"> 
                <i class="far fa-check-circle"></i> {% if folder is defined %} Guardar cambios {% else %} Cargar área {% endif %}
            </button>
            <a class="btn btn-secondary text-white" onclick="return confirm('¿Está seguro que desea cancelar la carga?')" style="margin-top:30px;" href="{{path('viewAreas')}}"> 
                <i class="fas fa-undo-alt"></i> Cancelar
            </a>
        </div>
        {% endif %}
        
    </div>
    </form>
</div>
{% endblock %}